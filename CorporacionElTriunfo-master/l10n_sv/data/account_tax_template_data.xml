<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Account Tax Template -->
        <record id="impuestos_plantilla_iva_por_pagar" model="account.tax.template">
            <field name="chart_template_id" ref="cuenta_plantilla"/>
            <field name="name">IVA por Pagar</field>
            <field name="description">IVA por Pagar</field>
            <field name="amount" eval="13"/>
            <field name="amount_type">percent</field>
            <field name="type_tax_use">sale</field>
            <field name="price_include" eval="True"/>
            <field name="tax_group_id" ref="tax_group_13"/>
            <field name="invoice_repartition_line_ids" eval="[(5,0,0),
                (0,0, {
                    'factor_percent': 100,
                    'repartition_type': 'base',
                }),
                (0,0, {
                    'factor_percent': 100,
                    'repartition_type': 'tax',
                    'account_id': ref('cta210305'),
                }),
            ]"/>
            <field name="refund_repartition_line_ids" eval="[(5, 0, 0),
                (0,0, {
                    'factor_percent': 100,
                    'repartition_type': 'base',
                }),
                (0,0, {
                    'factor_percent': 100,
                    'repartition_type': 'tax',
                    'account_id': ref('cta210305'),
                }),
            ]"/>
        </record>

        <record id="impuestos_plantilla_iva_por_cobrar" model="account.tax.template">
            <field name="chart_template_id" ref="cuenta_plantilla"/>
            <field name="name">IVA por Cobrar</field>
            <field name="description">IVA por Cobrar</field>
            <field name="amount" eval="13"/>
            <field name="amount_type">percent</field>
            <field name="type_tax_use">purchase</field>
            <field name="price_include" eval="True"/>
            <field name="tax_group_id" ref="tax_group_13"/>
            <field name="invoice_repartition_line_ids" eval="[(5,0,0),
                (0,0, {
                    'factor_percent': 100,
                    'repartition_type': 'base',
                }),
                (0,0, {
                    'factor_percent': 100,
                    'repartition_type': 'tax',
                    'account_id': ref('cta110501'),
                }),
            ]"/>
            <field name="refund_repartition_line_ids" eval="[(5, 0, 0),
                (0,0, {
                    'factor_percent': 100,
                    'repartition_type': 'base',
                }),
                (0,0, {
                    'factor_percent': 100,
                    'repartition_type': 'tax',
                    'account_id': ref('cta110501'),
                }),
            ]"/>
        </record>

    </data>
</odoo>
